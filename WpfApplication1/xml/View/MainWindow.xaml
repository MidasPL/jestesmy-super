<Window x:Class="xml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">

    <Window.Resources>
        <XmlDataProvider x:Key="questions" XPath="SandboxExchangeFormat" Source="C:\\XML_SANDBOX_2.xml" />

    <HierarchicalDataTemplate x:Key="rootTemplate">
        <HierarchicalDataTemplate.ItemsSource>
            <Binding XPath="child::*" />
        </HierarchicalDataTemplate.ItemsSource>
        <StackPanel Orientation="Horizontal">
           <TextBlock Text="{Binding XPath=Name[1], Mode=OneWay}" />
        </StackPanel>
    </HierarchicalDataTemplate>
    </Window.Resources>
    <Grid>
        <Menu IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="Open file"></MenuItem>
            </MenuItem>
        </Menu>
        <TreeView Name="TreeViewer" Margin="10,22,10,68" Visibility="Visible" FontSize="15" 
   ItemsSource="{Binding Source={StaticResource questions}}" ItemTemplate="{StaticResource rootTemplate}"  >
        </TreeView>
    </Grid>





        
</Window>
